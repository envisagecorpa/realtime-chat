{
  "name": "realtime-chat-frontend",
  "version": "1.0.0",
  "description": "Real-time chat frontend with Vue 3 and Socket.IO",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .vue,.js --fix",
    "format": "prettier --write 'src/**/*.{vue,js}'"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "vite": "^5.1.6",
    "vitest": "^1.4.0",
    "@vue/test-utils": "^2.4.5",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "@vitest/coverage-v8": "^1.4.0",
    "happy-dom": "^13.6.2"
  }
}
